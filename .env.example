# Database
DB_PASSWORD=your_secure_password_here

# Twitch IRC Credentials
# Get your OAuth token from https://twitchapps.com/tmi/
TWITCH_USERNAME=your_bot_username
TWITCH_PASSWORD=oauth:your_oauth_token

# Twitch API Credentials (for live status, user info, etc.)
# Create an app at https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret

# Channels to monitor (comma-separated, without #)
CHANNELS=channel1,channel2,channel3

# Server Configuration
PORT=3000
LOG_LEVEL=info

# Client Configuration
CLIENT_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
