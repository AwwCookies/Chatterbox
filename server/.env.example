# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=twitch_archive
DB_USER=twitch
DB_PASSWORD=your_secure_password

# Twitch
TWITCH_USERNAME=your_bot_username
TWITCH_PASSWORD=oauth:your_oauth_token
CHANNELS=channel1,channel2,channel3

# Server
PORT=3000
LOG_LEVEL=info

# Client URLs (for CORS)
CLIENT_URL=http://localhost:5173

# Discord OAuth (for automatic webhook creation)
# Create an app at https://discord.com/developers/applications
# Add redirect URI: http://localhost:3000/api/discord/callback
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:3000/api/discord/callback
# Bot token is required to fetch channel lists and create webhooks
# In the Discord Developer Portal, go to "Bot" section and copy the token
# Bot invite URL: https://discord.com/api/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=536870912&scope=bot
DISCORD_BOT_TOKEN=your_discord_bot_token
